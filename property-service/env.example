# Server Configuration
PORT=3002
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/lyvoDB?retryWrites=true&w=majority&appName=Lyvo

# JWT Configuration (MUST match user service)
JWT_SECRET=your_jwt_secret_here
USER_JWT_SECRET=your_jwt_secret_here
USER_SERVICE_JWT_SECRET=your_jwt_secret_here

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_email@example.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here

# Frontend URL - PRODUCTION READY
# Your actual Vercel URL
FRONTEND_URL=https://lyvo-teal.vercel.app

# CORS Configuration - PRODUCTION READY
# Your Vercel URL included in the comma-separated list
CORS_ORIGIN=https://lyvo-teal.vercel.app,http://localhost:3000,http://localhost:5173

# User Service Configuration - PRODUCTION READY
USER_SERVICE_URL=https://lyvo-user-service-latest-1.onrender.com/api

# Chat Service Configuration - PRODUCTION READY
CHAT_SERVICE_URL=https://lyvo-chat-service-latest.onrender.com
INTERNAL_API_KEY=your-internal-api-key-here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

 